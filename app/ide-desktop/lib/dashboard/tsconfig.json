{
  "extends": "../../tsconfig.json",
  "include": [
    "src",
    "e2e",
    "../types",
    "./**/*.json",
    "../../utils.ts",
    ".prettierrc.cjs",
    "*.js",
    "*.ts"
  ],
  "exclude": ["./dist"],
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "outDir": "../../../../node_modules/.cache/tsc",
    "paths": { "#/*": ["./src/*"] },

    "plugins": [
      {
        "name": "ts-plugin-namespace-auto-import"
      }
    ]
  }
}
